<div class="options">
    <fieldset class="quantityFieldset">
        <label for="aantal">Aantal:</label>
        <div class="quantity">
            <input name="quantity" type="number" value="1" min="1" max="100">
            <div>
                <button type="button" data-way="up">
                    <%- include('../../static/icons/add') %>
                </button>
                <button type="button" data-way="down">
                    <%- include('../../static/icons/delete') %>
                </button>
            </div>
        </div>
    </fieldset>
    <fieldset class="sauzen">
        <div class="optie1">
        <label class="sausLabel" for="">Sauzen:</label>
        <div class="none">
            <input id="geenSaus" type="radio" name="extra_title" value="0" checked="checked">
            <label for="geenSaus">
                <div class="infoChoices">
                    <h4>
                        geen saus
                    </h4>
                </div>
            </label>
        </div>
        <input type="hidden" name="extra_price" value="0">
        <div class="sausList">
            <% sausjes.forEach(function(sausje) { %>
                <input id="<%= sausje.title %>" data-price="<%= sausje.price %>" type="radio" name="extra_title"
                    value="<%= sausje.title%>">
                <label for="<%= sausje.title %>" class="sausjes">
                    <img src="<%= sausje.image %>" alt="">
                    <div class="infoChoices">
                        <h4>
                            <%= sausje.title %>
                        </h4>
                        <p>
                            <%= money(sausje.price) %>
                        </p>
                    </div>
                </label>
            <% }); %>
        </div>
        </div>
    <!-- </fieldset> -->
    </fieldset>
</div>

<button class="addToCart">
    <%- include('../../static/icons/add') %>
        Toevoegen
</button>